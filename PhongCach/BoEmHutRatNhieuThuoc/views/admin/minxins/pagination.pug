mixin pagination(pagination)
    nav     
        ul(class="pagination")
            
                if(pagination.currenPage > 1)
                    li(class="page-item")
                        button(class="page-link"
                        button-pagination = pagination.currenPage - 1
                        ) Trang trước
                - for (var i = 1 ; i <= pagination.totalPage; i++)
                    li(class=`page-item ${pagination.currenPage == i ? "active" : ""}`)
                        button(class="page-link" button-pagination = i) #{i}

                if(pagination.currenPage < pagination.totalPage)    
                    li(class="page-item")
                        button(class="page-link"
                        button-pagination = pagination.currenPage + 1
                        ) Next 