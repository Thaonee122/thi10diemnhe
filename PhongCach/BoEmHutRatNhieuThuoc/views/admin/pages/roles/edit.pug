extends ../../layouts/default.pug
include ../../minxins/alert.pug


block main
    
    h1(class="mb-4") Chỉnh sửa nhóm quyền

    +alert-success(5000)
    +alert-error(5000)

    form(
        action=`${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
        method="POST"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
                value=data.title
            )

        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                type="text"
                class="form-control"
                id="desc"
                name="Description"
                value=data.Description
            )      
 
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
